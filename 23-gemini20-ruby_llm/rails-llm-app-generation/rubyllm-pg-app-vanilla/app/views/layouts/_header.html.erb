<%# app/views/layouts/_header.html.erb %>
<header class="bg-gray-800 text-white shadow-md">
  <nav class="container mx-auto px-4 sm:px-6 lg:px-8" aria-label="Top">
    <div class="flex items-center justify-between h-16">
      <%# Logo or Site Name %>
      <div class="flex items-center">
        <%= link_to "LLMRailsApp", root_path, class: "text-xl font-bold hover:text-gray-300" %>
      </div>

      <%# Navigation Links %>
      <div class="hidden sm:ml-6 sm:block">
        <div class="flex space-x-4">
          <%# Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" %>
          <%# Example of highlighting the current page (add logic as needed) %>
          <%# is_current = current_page?(root_path) %>
          <%= link_to "Home", root_path, class: "text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium" %>
          <%= link_to "Chats", chats_path, class: "text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium" %>
          <%= link_to "About", about_path, class: "text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium" %>

          <%# Add more links here %>
        </div>
      </div>

      <%# Mobile menu button (optional - requires JS for toggle) %>
      <div class="-mr-2 flex sm:hidden">
        <button type="button" class="bg-gray-800 inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white" aria-controls="mobile-menu" aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <%# Heroicon name: outline/menu %>
          <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <%# Heroicon name: outline/x %>
          <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </nav>

  <%# Mobile menu, show/hide based on menu state (optional - requires JS for toggle) %>
  <div class="sm:hidden hidden" id="mobile-menu">
    <div class="px-2 pt-2 pb-3 space-y-1">
      <%# Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" %>
      <%= link_to "Home", root_path, class: "text-gray-300 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium" %>
      <%= link_to "Chats", chats_path, class: "text-gray-300 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium" %>
      <%= link_to "About", about_path, class: "text-gray-300 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium" %>
    </div>
  </div>
</header>
